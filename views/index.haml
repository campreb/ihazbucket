= form_tag '/files', multipart: true, method: :post do
  %fieldset
    .form-group
      = label_tag :upload_files
      = file_field_tag :upload_files
      %button(type='submit' class='btn btn-primary') Upload
%hr
.row
  - @files.to_a.each.with_index do |file, index|
    - if index % 4 == 0
      .clearfix
    = haml :_item, locals: { file: file }
